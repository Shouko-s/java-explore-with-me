                  "const expectedCreated = pm.collectionVariables.get('commentCreated');",
                  "const expectedText = pm.collectionVariables.get('commentText');",
                  "",
                  "const found = json.find(c => c.id === expectedId);",
                  "",
                  "pm.test(\"В списке должен присутствовать созданный комментарий\", function () {",
                  "    pm.expect(found, 'Комментарий с id=' + expectedId + ' не найден в списке').to.exist;",
                  "});",
                  "",
                  "pm.test(\"Дата создания комментария должна совпадать с сохраненной\", function () {",

                "exec": [
                  "pm.test(\"Статус 201 CREATED\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "const json = pm.response.json();",
                  "",
                  "pm.test(\"Ответ содержит обязательные поля комментария\", function () {",
                  "    pm.expect(json).to.have.property('id');",
                  "    pm.expect(json).to.have.property('eventId');",
                  "    pm.expect(json).to.have.property('authorId');",
                  "    pm.expect(json).to.have.property('authorName');",
                  "    pm.expect(json).to.have.property('text');",
                  "    pm.expect(json).to.have.property('createdOn');",
                  "});",
                  "",
                  "pm.collectionVariables.set('commentId', json.id);",
                  "pm.collectionVariables.set('commentCreated', json.createdOn);",
                  "pm.collectionVariables.set('commentText', json.text);",
                  "console.log('Создан комментарий, commentId = ' + json.id);"
                ]
              }

        {
          "name": "0.3 Создание события для комментариев",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "function formatDate(date) {",
                  "  const pad = (n) => n < 10 ? '0' + n : '' + n;",
                  "  const year = date.getFullYear();",
                  "  const month = pad(date.getMonth() + 1);",
                  "  const day = pad(date.getDate());",
                  "  const hours = pad(date.getHours());",
                  "  const minutes = pad(date.getMinutes());",
                  "  const seconds = pad(date.getSeconds());",
                  "  return year + '-' + month + '-' + day + ' ' + hours + ':' + minutes + ':' + seconds;",
                  "}",
                  "",
                  "const now = new Date();",
                  "const eventDate = new Date(now.getTime() + 3 * 60 * 60 * 1000);",
                  "const eventDateStr = formatDate(eventDate);",
                  "pm.variables.set('eventDate', eventDateStr);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Статус 201 CREATED при создании события\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "const json = pm.response.json();",
                  "pm.test(\"Ответ содержит id события\", function () {",
                  "    pm.expect(json).to.have.property('id');",
                  "});",
                  "",
                  "pm.collectionVariables.set('eventId', json.id);",
                  "console.log('Создано событие, eventId = ' + json.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"annotation\": \"Тестовое событие для комментариев\",\n  \"description\": \"Описание тестового события для проверки комментариев\",\n  \"eventDate\": \"{{eventDate}}\",\n  \"paid\": false,\n  \"participantLimit\": 100,\n  \"requestModeration\": false,\n  \"category\": {{categoryId}},\n  \"location\": {\n    \"lat\": 55.75,\n    \"lon\": 37.61\n  },\n  \"title\": \"Событие для теста комментариев {{timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}/events",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "users",
                "{{userId}}",
                "events"
              ]
            }
          },
          "response": []
        },
